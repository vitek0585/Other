        </local:PlayingCard>
        <local:PlayingCard Face="H6" Width="100" Height="140" Canvas.Left="90" Canvas.Top="100">
          <local:PlayingCard.RenderTransform>
            <RotateTransform CenterX="50" CenterY="140" Angle="30" />
          </local:PlayingCard.RenderTransform>
        </local:PlayingCard>
        <local:PlayingCard Face="H7" Width="100" Height="140" Canvas.Left="100" Canvas.Top="100">
          <local:PlayingCard.RenderTransform>
            <RotateTransform CenterX="50" CenterY="140" Angle="40" />
          </local:PlayingCard.RenderTransform>
        </local:PlayingCard>
        <local:PlayingCard Face="H10" Width="100" Height="140" Canvas.Left="110" Canvas.Top="100">
          <local:PlayingCard.RenderTransform>
            <RotateTransform CenterX="50" CenterY="140" Angle="50" />
          </local:PlayingCard.RenderTransform>
        </local:PlayingCard>
        <local:PlayingCard Face="HQ" Width="100" Height="140" Canvas.Left="120" Canvas.Top="100">
          <local:PlayingCard.RenderTransform>
            <RotateTransform CenterX="50" CenterY="140" Angle="60" />
          </local:PlayingCard.RenderTransform>
        </local:PlayingCard>
      </Canvas>
    </Viewbox>
</Window>