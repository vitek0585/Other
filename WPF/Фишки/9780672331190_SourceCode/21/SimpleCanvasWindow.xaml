<Window x:Class="CustomPanels.SimpleCanvasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CustomPanels"
        Title="Four Buttons in a SimpleCanvas">
    <local:SimpleCanvas>
        <Button FontSize="40" Content="1" Background="Red"/>
        <Button local:SimpleCanvas.Left="40" local:SimpleCanvas.Top="40" FontSize="40" Content="2" Background="Orange"/>
        <Button local:SimpleCanvas.Left="80" local:SimpleCanvas.Top="80" FontSize="40" Content="3" Background="Yellow"/>
        <Button local:SimpleCanvas.Left="120" local:SimpleCanvas.Top="120" FontSize="40" Content="4" Background="Lime"/>
    </local:SimpleCanvas>
</Window>
